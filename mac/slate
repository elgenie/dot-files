# Resize Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
bind c:ctrl;alt;cmd push up center
bind z:ctrl;alt;cmd  corner top-left resize:${full}

bind right:ctrl resize +10% +0
bind left:ctrl  resize -10% +0
bind up:ctrl    resize +0   -10%
bind down:ctrl  resize +0   +10%
bind right:alt  resize -10% +0 bottom-right
bind left:alt   resize +10% +0 bottom-right
bind up:alt     resize +0   +10% bottom-right
bind down:alt   resize +0   -10% bottom-right

# Push Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
# cycle though common window sizings
bind right:ctrl;alt;cmd chain push right  bar-resize:screenSizeX/2 | push right bar-resize:screenSizeX/3 | push up center | push left bar-resize:screenSizeX/3 | push left bar-resize:screenSizeX/2
bind left:ctrl;alt;cmd  chain push left  bar-resize:screenSizeX/2 | push left bar-resize:screenSizeX/3 | push up center | push right bar-resize:screenSizeX/3 | push right bar-resize:screenSizeX/2
bind up:ctrl;alt;cmd    push up    bar-resize:screenSizeY/2
bind down:ctrl;alt;cmd  push down  bar-resize:screenSizeY/2

# Nudge Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
bind right:ctrl;alt nudge +10% +0
bind left:ctrl;alt  nudge -10% +0
bind up:ctrl;alt    nudge +0   -10%
bind down:ctrl;alt  nudge +0   +10%

# Throw Bindings: throw the window to any screen's origin
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
bind 1:ctrl;alt;cmd throw 0
bind 2:ctrl;alt;cmd throw 1
bind 3:ctrl;alt;cmd throw 2
bind pageUp:ctrl;alt;cmd throw left resize:${full}
bind pageDown:ctrl;alt;cmd throw right resize:${full}
# bind right:ctrl;alt;cmd throw right
# bind left:ctrl;alt;cmd throw left
# bind up:ctrl;alt;cmd throw up
# bind down:ctrl;alt;cmd throw down

# Focus Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
bind right:cmd;alt    focus right
bind left:cmd;alt     focus left
bind up:cmd;alt       focus up
bind down:cmd;alt     focus down
# bind up:cmd;alt   focus above
# bind down:cmd;alt focus behind

# Layout Bindings
# bind padEnter:ctrl layout 3monitors

# Window Hints
bind esc:cmd hint
